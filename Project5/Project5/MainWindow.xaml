<Window x:Class="Project5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="850" Width="1000">
    <Grid>
        <Canvas x:Name="mapCanvas" Width="800" Height="800" Margin="10,10,187,13"/>
        <Button x:Name="openButton" Content="Open" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="827,10,0,0" Click="openButtonClick"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="907,10,0,0" Click="saveButtonClick"/>
        <ListBox x:Name="itemList" HorizontalAlignment="Left" Height="494" VerticalAlignment="Top" Width="155" Margin="827,35,0,0" SelectionChanged="itemList_SelectionChanged"/>
        <Button x:Name="removeButton" Content="Remove" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="907,534,0,0" Click="removeSelected"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="827,534,0,0" RenderTransformOrigin="-0.933,-2.5" Click="openAdd"/>

    </Grid>
</Window>
